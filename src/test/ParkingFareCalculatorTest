import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class ParkingFareCalculatorTest {

    @Test
    void calculateFareCarWithLessThan30minutesParkingTime() {
        // Arrange
        ParkingTicket ticket = new ParkingTicket(VehicleType.CAR, 20); // 20 minutes of parking time
        ParkingFareCalculator calculator = new ParkingFareCalculator();

        // Act
        double fare = calculator.calculateFare(ticket);

        // Assert
        assertEquals(0.0, fare, 0.01); // expected fare is 0.0 with a delta of 0.01
    }

    @Test
    public void calculateFareBikeWithLessThan30minutesParkingTime() {
        // Arrange
        ParkingFareCalculator calculator = new ParkingFareCalculator();
        Ticket ticket = new Ticket(VehicleType.MOTO, 15); // 15 minutes de stationnement

        // Act
        double fare = calculator.calculateFare(ticket);

        // Assert
        assertEquals(0, fare, 0.01); // vérifie que le prix calculé est égal à 0 avec une tolérance de 0,01
    }
}
